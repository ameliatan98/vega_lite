{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "2016 Rio Olympics Participation by Sports",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/ameliatan98/vega_lite/main/FIT3179/data/athletes.csv"
  },
  "params": [
    {
      "name": "name",
      "value": 70,
      "bind": {
        "input": "range",
        "min": 72,
        "max": 2272,
        "step": 100,
        "name": "Total Participants: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"aggregate": "count", "field": "name"},
    "y": {
      "field": "sport",
      "sort": {"op": "sum", "field": "name", "order": "ascending"}
    }
  },
  "config": {}
}